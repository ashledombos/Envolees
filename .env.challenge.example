SHORTLIST_MIN_SCORE=0.62
SHORTLIST_MAX_TICKERS=5
MIN_TRADES_OOS=15
DD_CAP=0.012

# -----------------------------------------------------------------------------
# SPLIT (validation OOS)
# -----------------------------------------------------------------------------
SPLIT_TARGET=oos
SPLIT_RATIO=0.70

# -----------------------------------------------------------------------------
# PONDÉRATIONS (alias normalisés)
